@model IEnumerable<CampPlanner.ViewModels.Camp.CampViewModel>
@{
    ViewBag.Title = "Camp list";
}

<div class="row">
    <div class="col-md-11 col-lg-offset-1">
        <h1>@ViewBag.Title</h1>

        <a asp-controller="Camp" asp-action="New" class="btn btn-primary">New</a>
        @{
            //TODO create angular*@
        }
        <div class="div-table">
            @if (Model != null && Model.Count() > 0)
            {
                @foreach (var camp in Model)
                {
                    <div class="div-table-row">
                        <div class="div-table-col">@camp.Name</div>
                        <div class="div-table-col">@camp.StartDate</div>
                        <div class="div-table-col">@camp.EndDate</div>
                        <div class="div-table-col">
                            <a asp-controller="Camp" asp-action="Manage" asp-route-id="@camp.Id" class="btn btn-sm btn-primary">Manage</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
